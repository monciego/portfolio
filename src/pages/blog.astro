---
import PostList from "../components/PostList.astro";
import ParagraphContainer from "../components/ParagraphContainer.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Layout from "../layouts/Layout.astro";

const allPosts = await Astro.glob("./post/*.md");
---

<Layout title="Jericho Bantiquete">
  <SectionHeader title="Blog (ブログ)" description="Read my latest posts" />

  <ParagraphContainer>
    {allPosts.map((post) => <PostList {post} />)}
  </ParagraphContainer>
</Layout>
